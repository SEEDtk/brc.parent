{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${input:pickArgs}",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "stopOnEntry": true
        },
        {
            "name": "Python Debugger: Test MCP Tool",
            "type": "debugpy",
            "request": "launch",
            "program": "${userHome}/Documents/SEEDtk/git/bvbrc-data-mcp-server/test_tools.py",
            "console": "integratedTerminal",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "stopOnEntry": true
        },        
        {
            "type": "perl",
            "request": "launch",
            "name": "Reconfiguration",
            "program": "${userHome}/Documents/SEEDtk/git/seedtk/Config.pl",
            "stopOnEntry": false,
            "args": ["--eclipse", "seedtk"],
            "cwd": "${userHome}/Documents/SEEDtk/Data"
        },
        {
            "type": "java",
            "name": "Bin Test",
            "request": "launch",
            "mainClass": "org.theseed.bins.generate.App",
            "projectName": "bins.generate",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}"
        },
        {
            "type": "java",
            "name": "Query Test",
            "request": "launch",
            "mainClass": "org.theseed.p3.query.App",
            "projectName": "p3.query",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}"
        },
        {
            "type": "java",
            "name": "Eval Test",
            "request": "launch",
            "mainClass": "org.theseed.dl4j.eval.App",
            "projectName": "dl4j.eval",
            "args": "eval --format HTML -O TestEval.Q --clear -u Eval.13 TestEval",
            "vmArgs": "-Xmx16G",
            "cwd": "${userHome}/Documents/SEEDtk/Data"
        },
        {
            "type": "java",
            "name": "Changes Test",
            "request": "launch",
            "mainClass": "org.theseed.genome.changes.App",
            "projectName": "genome.changes",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}"
        },
        {
            "type": "java",
            "name": "Download Test",
            "request": "launch",
            "mainClass": "org.theseed.genome.download.App",
            "projectName": "genome.download",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}"
        },
        {
            "type": "java",
            "name": "Template Test",
            "request": "launch",
            "mainClass": "org.theseed.io.template.App",
            "projectName": "io.template",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}"
        },
        {
            "type": "java",
            "name": "Config Test",
            "request": "launch",
            "mainClass": "org.theseed.config.App",
            "projectName": "java.config",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}"
        },
        {
            "type": "java",
            "name": "Hammer Test",
            "request": "launch",
            "mainClass": "org.theseed.kmers.hammer.App",
            "projectName": "kmers.hammer",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}"
        },
        {
            "type": "java",
            "name": "Reps Test",
            "request": "launch",
            "mainClass": "org.theseed.proteins.kmers.reps.App",
            "projectName": "kmers.reps",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}"
        },
        {
            "type": "java",
            "name": "RepDB Build Test",
            "request": "launch",
            "mainClass": "org.theseed.proteins.kmers.reps.App",
            "projectName": "kmers.reps",
            "cwd": "${userHome}/Documents/SEEDtk/Data/P3Eval.New",
            "args": "buildFromGtos GTO200 phes.definition.tbl rep100fine.ser --verify allprots.fa"
        },
        {
            "type": "java",
            "name": "Survey Test",
            "request": "launch",
            "mainClass": "org.theseed.genome.survey.App",
            "projectName": "genome.survey",
            "cwd": "${userHome}/Documents/SEEDtk/Data",
            "args": "${input:pickArgs}",
            "vmArgs": "-Dlogback.configurationFile=C:/Users/drake/Documents/SEEDtk/git/kernel/jars/quiet.logback.xml"
        }
    ],
    "inputs": [
        {
            "id": "pickArgs",
            "type": "promptString",
            "description": "Enter command-line arguments for the selected application (e.g., --help, --verbose, etc.)",
            "default": "--help"
        }
    ]
}